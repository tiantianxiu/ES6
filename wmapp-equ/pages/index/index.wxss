/**index.wxss**/


/* 头部 */

.index-header {
  
}

.index-header .tab-item {
  color: #bad8d8;
}

.tab-h {
  height: 80rpx;
  width: 60%;
  padding:0 30rpx;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  background: #fff;
  font-size: 16px;
  white-space: nowrap;
  position: fixed;
  top: 0;
  left: 0; 
  z-index: 99;
}
.tab-content{
  margin-top: 80rpx;
}
.tab-item {
  display: inline-block;
  transition: all 0.3s;
  color: #bad8d8;
  font-size: 30rpx;
  font-weight: 600;
  width: 25%;
  text-align: center;
  box-sizing: border-box;
}
.tab-item:first-child {
  text-align: left;
}
.tab-item:last-child {
  text-align: right;
}

.tab-item.active {
  font-size: 32rpx;
  color: #070b28;
  position: relative;
}


.item-ans {
  width: 100%;
  display: flex;
  flex-grow: row no-wrap;
  justify-content: space-between;
  padding: 30rpx;
  box-sizing: border-box;
  height: 180rpx;
  align-items: center;
  border-bottom: 1px solid #f2f2f2;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  position: relative;
  padding-right: 30rpx;
}

.avatar .img {
  width: 100%;
  height: 100%;
}

.avatar .doyen {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  bottom: -2px;
  right: 20rpx;
}

.expertInfo {
  font-size: 12px;
  flex-grow: 2;
  color: #b0b0b0;
  line-height: 1.5em;
}

.expertInfo .name {
  font-size: 32rpx;
  color: #000;
  margin-bottom: 6px;
}
.askBtn {
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 14px;
  border-radius: 60rpx;
  border: 1px solid #4675f9;
  color: #4675f9;
}
.scoll-h {
  height: 100%;
}

/* 头部end */

/* 选择卡 */

.area {
  top: -100vh;
  left: -100vw;
