@import '/pages/square/square';

.square-title::after {
  display: none;
}

.square-title {
  background: 0;
}

.square-title .square-title-border {
  position: absolute;
  bottom: -6rpx;
  left: calc((100% - 60rpx) * 0.28);
  border-radius: 50rpx;
  height: 6rpx;
  width: calc((100% - 60rpx) * 0.6);
  background-color: #11b9ba;
}
.pic-banner{
  /* background-color: rgba(106,109,126,.3); */
  /* min-height: 400rpx;  */
  height: 100vw;
  width: 100vm;
  position: relative;
  margin-bottom: 30rpx;
}
.pic-banner .pic-banner-image{
  min-height: 320rpx; 
}
.pic-title-content{
  color: #ffffff;
  padding-bottom: 20rpx;
  position: absolute;
  z-index: 1;
  left: 0;
  bottom: 0;

}
.pic-title-content .view-reply view{
  color: #ffffff;
  width: auto;
  margin-right: 10rpx;  
}
.pic-title-content .footer{
  margin: 4rpx 0;
  
}
.pic-title-content .footer .view-reply{
  left: 0;
  right: auto;
}
.view-reply view{
  text-align: left;
}
.pic-title{
  font-size: 36rpx;
}


