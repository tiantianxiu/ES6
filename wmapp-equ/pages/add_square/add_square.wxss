page {
  background-color: #fff !important;
}

.add-square-container {
  padding: 40rpx 42rpx;
}

.add-aqu-header {
  padding-bottom: 30rpx;
  position: relative;
  height: 52rpx;
  line-height: 52rpx;
}

.btn {
  position: absolute;
  right: 0;
  top: 0;
  display: inline-block;
  width: 88rpx;
  height: 52rpx;
  color: #13b8ba;
  font-size: 32rpx;
  text-align: center;
  background-color: #fff;
  font-weight: 600;
}
.textarea{
  height: 180rpx;
  margin-bottom: 20rpx;
}
textarea {
  width: 100%;
  height: 180rpx;
  
}

.images .li {
  display: inline-block;
  box-sizing: border-box;
  width: 26vw;
  height: 26vw;
  margin: 0 10rpx;
  position: relative;
  line-height:200rpx;
}
.images .li image{
  border-radius: 20rpx;
}
.images .li.add-video{
  border-radius: 30rpx;
  text-align:center;
  font-size: 100rpx;
}

.images .li:first-child {
  margin-left: 10rpx;
}

.li.vli {
  width: 50%;
  height: 400rpx;
}

video, image {
  z-index: 1;
}

.video-del {
  width: 100%;
  color: #fff;
  background-color: #f00;
  text-align: center;
  height: 46rpx;
  line-height: 46rpx;
}

.locals {
  margin-top: 64rpx;
  display: inline-flex;
  padding: 0 20rpx;
  border-radius: 30rpx;
  position: relative;
  line-height: 100%;
  vertical-align: middle;
}

.locals text {
  width: 50rpx;
}

.locals image {
  width: 26rpx;
  height: 26rpx;
  vertical-align: middle;
  display: inline-block;
  margin-right: 30rpx;
}

.locals image.local-del {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top:-2rpx;
 right:2rpx;
}

.animated {
  animation-duration: 0.3s;
}

.pic-title {
  background-color: rgb(236, 236, 236);
  padding: 8rpx 28rpx;
  line-height: 52rpx;
  vertical-align: text-bottom;
}

.pic-title text {
  color: rgb(196, 196, 196);
  font-size: 44rpx;
}

.pic-content {
  padding: 28rpx;
}

.pic-content .li {
  padding: 6rpx 18rpx;
  border-radius: 40rpx;
  display: inline-block;
  border: 2rpx solid rgb(182, 181, 181);
  color: rgb(136, 136, 136);
  line-height: 100%;
  font-size: 26rpx;
}

.pic-content .li.active {
  background-color: rgb(218, 218, 218);
  color: rgb(92, 138, 224);
}
.topics-list{
  position: fixed;
  z-index: 101;
  background-color: #ffffff;
  left: 0;
  bottom: -100%;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  transition: all .3s;
}
.topics-list.active{
  bottom: 0;
}
.topics-list .title{
  display: flex;
  line-height: 34rpx;
}
.topics-list .title text{
  flex: 1;
}
.topics-list .title .cancle{
  font-size: 34rpx;
  text-align: right;
  line-height:26rpx;
}
.topics-list scroll-view{
  padding-top: 24rpx;
}
.topics-list .li{
  border-bottom: 2rpx solid #bad8d8;
  padding: 40rpx 0 40rpx;
  position: relative;
}
.topics-list .li.lihover{
  background-color: #d2d3d8;
}

.topics-list .li text{
  font-size: 24rpx;
  color: #676d7d;
  position: absolute;
  right: 0;
  bottom: 40rpx;
}